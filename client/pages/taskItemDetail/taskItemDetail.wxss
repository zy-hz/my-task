.item-panel__hd {
  height: 250px;
  background-color: #2a5caa;
  text-align: center;
  color: #fff;
}

.item-course {
  padding: 30px 0px 10px 0px;
  font-size: 12pt;
}

.item-spend__minute {
  display: inline;
  font-size: 50pt;
}

.item-spend__second {
  display: inline;
  font-size: 20pt;
}

.item-title {
  padding: 0 10px;
  height: 2.8em;
  color: #999;
  font-size: 12pt;
  border-bottom: 1px solid #f2f2f2;
  background-color: #fffffb;
}

.item-title__bd {
  text-align: center;
  line-height: 2.8em;
}

.item-title__input{
  padding-top: 15rpx;
}

.item-title__btn{
  position: fixed;
  right: 0;
  width: 32rpx;
  height: 32rpx;
  padding: 30rpx;
  z-index: 999;
}

.op-panel {
  padding: 20px 20px;
}

.op-panel button {
  margin: 40px;
}
