<view class="weui-cell">
  <view class="weui-cell__bd">
    <textarea class="weui-textarea" placeholder="作业输入" maxlength="-1" bindinput="onInput" bindblur="onBlur" />
    <view class="weui-textarea-counter">0/200</view>
  </view>
</view>

<!-- 工具栏面板-->
<view class="custom_tab">
  <view class="weui-cell">
    <view class="weui-cell__hd"></view>
    <view class='weui-cell__bd'></view>
    <view class="weui-cell__ft">
      <image class="tab_item_img" src="{{'/images/keyboard_a.png'}}" bindtap='onBatchInput'></image>
      <image class="tab_item_img" src="{{EnableEditMode == false ? '/images/edit_64_a.png' : '/images/edit_64_b.png' }}" bindtap='onChangeEditMode'></image>
    </view>
  </view>
</view>