<!--作业列表-->
<view class="task-list">
  <!--页眉-->
  <view class="task-list__hd">{{taskBlock.folderName}}{{taskBlock.itemCount}}</view>
  <!--内容-->
  <view class="weui-cells weui-cells_after-title task-list__bd">

    <!--课程面板-->
    <view class="course-panel" wx:for="{{taskBlock.courses}}">
      <!--课程栏目头部-->
      <view class="weui-cell course-panel__hd">{{item.name}}</view>
      <!--作业列表区-->
      <view class="weui-cell course-panel__bd" wx:for="{{item.taskItems}}">
        {{index+1}}. {{item.title}}
      </view>
      <!--课程栏目底部-->
      <view class="weui-cell course-panel__ft">
        <input placeholder=" + 添加作业" data-course="{{item.id}}" bindblur="doAddNewTaskItem" value="{{addNewTaskPromotion}}"/>
      </view>
      <view class="weui-cell"></view>
    </view>

  </view>
  <!--页脚-->
  <view class="task-list__ft">我是有底线的</view>
</view>